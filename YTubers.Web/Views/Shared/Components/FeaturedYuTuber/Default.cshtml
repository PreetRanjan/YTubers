@model IEnumerable<YuTuber>
<div class="container">
    <h5>Featured YouTubers</h5>
    <div class="row justify-content-center align-content-center">

        @foreach (var yuTuber in Model)
        {
        <a asp-area="User" asp-controller="Profile" asp-action="PublicProfile" asp-route-username="@yuTuber.ChannelId">
            <div class="col-auto p-2 border m-1" style="max-width:18rem">
                <img src="@yuTuber.ThumbnailUrl" alt="" height="200" width="200" class="d-flex mx-auto" />
                <h5 class="text-center">@yuTuber.ChannelName</h5>
                <h6 class="text-muted text-center">@yuTuber.Category.Name</h6>
                <h6 class="text-muted text-center">@yuTuber.City, @yuTuber.Country</h6>
                <hr />
                <span class="featured">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bookmark-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M4 0a2 2 0 0 0-2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4zm4.16 4.1a.178.178 0 0 0-.32 0l-.634 1.285a.178.178 0 0 1-.134.098l-1.42.206a.178.178 0 0 0-.098.303L6.58 6.993c.042.041.061.1.051.158L6.39 8.565a.178.178 0 0 0 .258.187l1.27-.668a.178.178 0 0 1 .165 0l1.27.668a.178.178 0 0 0 .257-.187L9.368 7.15a.178.178 0 0 1 .05-.158l1.028-1.001a.178.178 0 0 0-.098-.303l-1.42-.206a.178.178 0 0 1-.134-.098L8.16 4.1z" />
                    </svg>
                </span>

                <div class="btn btn-danger btn-block">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="white" class="bi bi-youtube" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.007 2.007 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.007 2.007 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31.4 31.4 0 0 1 0 7.68v-.122C.002 7.343.01 6.6.064 5.78l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.007 2.007 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A99.788 99.788 0 0 1 7.858 2h.193zM6.4 5.209v4.818l4.157-2.408L6.4 5.209z" />
                    </svg> @((yuTuber.SubscribersCount*1.0/1000000).ToString("0.00")) M
                </div>



            </div>
        </a>
        
        }
    </div>
</div>
    