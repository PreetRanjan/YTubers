@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="border p-2">
    <h2 class="text-dark">Delete Catagory</h2>
    <h5 class="text-danger">You are about to delete all the SubCategories and MenuItems of this category. You need Admin priviledges to do this. This operation is not 
    reversible.
    </h5>
</div>

<form method="post" asp-action="Delete" autocomplete="off">
    <div class="border background-white">
        
        <div class="list-group">
            <div class="list-group-item"><h6>Name - @Model.Name</h6></div>
            <div class="list-group-item"><h6>Description - @Model.Description</h6></div>
        </div>
        <div class="form-group row">
            <div class="col- offset-2">
                <partial name="_DeleteAndBacktoList" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
