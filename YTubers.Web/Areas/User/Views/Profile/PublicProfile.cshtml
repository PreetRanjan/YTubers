@{
    ViewData["Title"] = $"{Model.ChannelName}'s Profile";
}
@model YTubers.Web.Models.ViewModels.YuTuberViewModel2
    <form method="post" asp-area="User" asp-controller="Profile" asp-action="ReachOutFormPost">
        <div class="container">
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 bg-dark">
                    <div class="media align-items-end profile-header">
                        <div class="profile mr-3"><img src="@Model.ThumbnailUrl" alt="..." width="130" class="rounded mb-2 img-thumbnail"></div>
                        <div class="media-body mb-5 text-white">
                            <h4 class="mt-0 mb-0">@Model.ChannelName</h4>
                            <p class="small mb-4"> <i class="fa fa-map-marker mr-2"></i>@Model.City,@Model.Country</p>
                        </div>
                    </div>
                </div>

                <div class="bg-light p-4 d-flex justify-content-end text-center">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">@(Model.CategoryName) </h5><small class="text-muted"> <i class="fa fa-picture-o mr-1"></i>Category</small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">@(Model.SubscribersCount*1.0/1000000) M</h5><small class="text-muted"> <i class="fa fa-picture-o mr-1"></i>Subscribers</small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">@(Model.Price*1.0/1000) K</h5><small class="text-muted"> <i class="fa fa-user-circle-o mr-1"></i>Price</small>
                        </li>
                    </ul>
                </div>

                <div class="py-4 px-4">
                    <div class="py-4">
                        <h5 class="mb-3">Start Conversation</h5>
                        <div class="p-4 bg-light rounded shadow-sm">
                            <a asp-area="User" asp-controller="Home" asp-action="StartChat" asp-route-receiverId="@Model.YuTuberUserId" class="btn btn-primary">Start Conversation</a>
                        </div>
                    </div>
                    <div class="py-4">
                        <h5 class="mb-3">Description</h5>
                        <div class="p-4 bg-light rounded shadow-sm">
                            <p class="font-italic mb-0">@Model.YourDescription</p>

                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0">Recent photos</h5><a href="#" class="btn btn-link text-muted">Show all</a>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 mb-2 pr-lg-1"><img src="https://res.cloudinary.com/mhmd/image/upload/v1556294928/nicole-honeywill-546848-unsplash_ymprvp.jpg" alt="" class="img-fluid rounded shadow-sm"></div>
                        <div class="col-lg-6 mb-2 pl-lg-1"><img src="https://res.cloudinary.com/mhmd/image/upload/v1556294927/dose-juice-1184444-unsplash_bmbutn.jpg" alt="" class="img-fluid rounded shadow-sm"></div>
                        <div class="col-lg-6 pr-lg-1 mb-2"><img src="https://res.cloudinary.com/mhmd/image/upload/v1556294926/cody-davis-253925-unsplash_hsetv7.jpg" alt="" class="img-fluid rounded shadow-sm"></div>
                        <div class="col-lg-6 pl-lg-1"><img src="https://res.cloudinary.com/mhmd/image/upload/v1556294928/tim-foster-734470-unsplash_xqde00.jpg" alt="" class="img-fluid rounded shadow-sm"></div>
                    </div>
                    <div class="py-4">
                        <h5 class="mb-3">Recent posts</h5>
                        <div class="p-4 bg-light rounded shadow-sm">
                            <p class="font-italic mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
                            <ul class="list-inline small text-muted mt-3 mb-0">
                                <li class="list-inline-item"><i class="fa fa-comment-o mr-2"></i>12 Comments</li>
                                <li class="list-inline-item"><i class="fa fa-heart-o mr-2"></i>200 Likes</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div><!-- End profile widget -->
            <div class="container">
                <h4>Fill the form and reach out to @Model.ChannelName</h4>
                @Html.HiddenFor(c=>c.Id)
                @Html.HiddenFor(c => c.AppUserId)
                @Html.HiddenFor(c=>c.YuTuberUserId)
                <div class="row">
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="ReachModel.FullName" placeholder="Full name*" />
                        <span class="text-danger" asp-validation-for="ReachModel.FullName"></span>
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" asp-for="ReachModel.Email" placeholder="Email Address*" />
                        <span class="text-danger" asp-validation-for="ReachModel.Email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 form-group">
                        <input class="form-control" asp-for="ReachModel.City" placeholder="City*" />
                        <span class="text-danger" asp-validation-for="ReachModel.City"></span>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" asp-for="ReachModel.State" placeholder="State*" />
                        <span class="text-danger" asp-validation-for="ReachModel.State"></span>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" asp-for="ReachModel.PhoneNumber" placeholder="Phone Number*" />
                        <span class="text-danger" asp-validation-for="ReachModel.PhoneNumber"></span>
                    </div>
                </div>
                <div class="row col-md-12">
                    <textarea placeholder="Your message" class="form-control" asp-for="ReachModel.Message"></textarea>
                    <span class="text-danger" asp-validation-for="ReachModel.Message"></span>
                </div>
                <button type="submit" class="btn btn-primary">Connect</button>
    
    </div>
    </div>
    </form>